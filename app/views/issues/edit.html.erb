<% provide(:title, "Edit Issue - #{@issue.name} - Qtrack") %>

<% content_for :js do %>
    <script>
        $(document).ready(function() {
            $('.wysihtml5').wysihtml5();
        });
    </script>
<% end %>

<!-- Main content -->
<div class="container" role="main">

  <!-- Breadcrumbs -->
  <ul class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="awe-home"></span> Home
        <% end %>
      </li>
      <li>
        <%= link_to projects_path do %>
          <span class="awe-tags"></span> Projects
        <% end %>
      </li>
      <li>
        <%= link_to @issue.project.name, @issue.project %>
      </li>
      <li>
        <%= link_to @issue.name, @issue %>
      </li>
      <li class="active">Edit</li>
  </ul>
  <!-- /Breadcrumbs -->
  <!-- Display flashes here -->
  <%= render_flashes %>

  <div class="content">
    <div class="page-header">
      <h2>Edit issue - <%= @issue.project.name %><small> Use this form edit create an issue.</small></h2>
    </div>

    <%= render partial: 'form', locals: {is_edit: true} %>

  </div>
</div>
<!-- /Main content -->